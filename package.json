{
  "name": "axelor-ui",
  "private": true,
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node scripts/check-yarn.js",
    "format": "prettier -w '**/*.{ts,tsx,js,jsx,json,css,scss}'",
    "storybook": "yarn workspace stories run storybook",
    "storybook:build": "yarn workspace stories run build-storybook",
    "build": "node scripts/build-packages.js",
    "clean": "yarn workspaces run clean"
  },
  "devDependencies": {
    "commander": "^9.4.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  }
}
